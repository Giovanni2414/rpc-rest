@page
@model rpc_users_page.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Competitive Programing Network</h1> <br />
<br />
<div class="d-flex justify-content-center">
    <div class="row">
        @if (Model.UsernameLogged == string.Empty || Model.UsernameLogged == "" || Model.UsernameLogged.Length < 1 || Model.UsernameLogged == null)
        {
        <div class="d-block text-center">
            <img src="https://pbs.twimg.com/profile_images/493847405670850561/qslkfHlq.jpeg" alt="RPC_Logo" width="100" height="100" />
            @if (Model.EmptyCamps)
            {
                <div class="alert alert-info mt-3">It can't be empty camps</div>
            }
            @if (Model.UserDoesntExist)
            {
                <div class="alert alert-danger mt-3">Username or Password incorrect</div>
            }
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input asp-for="Username" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary btn-block" />
                </div>
            </form>
            <hr />
            <div class="form-group">
                <a asp-page="/Users/Create"><input type="button" value="Sign up" class="btn btn-outline-primary btn-block" /></a>
            </div>
        </div>
        }
        else
        {
            <div class="d-block text-center">
                <img src="https://pbs.twimg.com/profile_images/493847405670850561/qslkfHlq.jpeg" alt="RPC_Logo" width="100" height="100" />
                <div class="mt-3">
                    ¡Welcome Again, <ins>@Html.DisplayFor(model => model.UsernameLogged)</ins>!
                                    <a asp-page="/Users/Index"><input type="button" value="Log out" class="btn btn-outline-danger btn-block mt-3" /></a>
                    <table class="table mt-4">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.User[0].Username)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User[0].Firstname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User[0].Lastname)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.User[0].Birthdate)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.User)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Firstname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lastname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Birthdate)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>